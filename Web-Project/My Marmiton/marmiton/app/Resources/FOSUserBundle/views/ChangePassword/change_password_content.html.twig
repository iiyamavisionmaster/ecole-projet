{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }} 
			<div class="form-group">
				{{ form_label(form.current_password) }}
				{{ form_widget(form.current_password, { 'attr': {'class': 'form-control input-lg ', 'placeholder': 'form.current_password'|trans } }) }}
				{{ form_errors(form.current_password) }}
			</div>
			<div class="form-group">
				{{ form_label(form.plainPassword.first) }}
				{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control input-lg  '  } }) }}
				{{ form_errors(form.plainPassword.first) }}
			</div>
			<div class="form-group">
				{{ form_label(form.plainPassword.second) }}
				{{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control input-lg ' } }) }}
				{{ form_errors(form.plainPassword.second) }}
			</div>
  
    <div>
        <input class="btn  btn-lg btn-warning btn-block  " type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
