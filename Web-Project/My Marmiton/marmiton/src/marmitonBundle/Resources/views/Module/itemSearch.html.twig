<section id="offre" class="offre">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 text-center">
        <div class="form-group">
          <div class="col-sm-12">
            <select id="selectAll" class="form-control  ">
              <option>Tag1</option>
              <option>Tag2</option>
              <option>Tag3</option>
              <option>Tag4</option>
            </select>
          </div>
        </div>
        <hr class="small">
        <div class="row">
          {% for item in articles %} 
          <div class="col-md-3">
            <div class="offre-item">
              <div id="wrapper">

               <input type="text" value="{{item.categoryId.tagName }}" data-role="tagsinput" name="category"></input>

               <li>{{item.estimedTimeDish}}  </li>
               <img src="{{ asset('public/img/uploads/'~item.imageId.path) }}" class="hover" >

               <p class="titleDish">{{item.title}}</p>

               <p class="text">
                <a  href="{{ absolute_url(path('getItem')) }}?id={{item.Id }}" class="btn btn-dark">{{ 'itemThumbnail.module.seemore'|trans }}</a></p> 
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>